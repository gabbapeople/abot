<launch>

    <arg name="cmd_vel_topic" default="/abot/mobile_abot/cmd_vel"/>
    <arg name="odom_topic" default="/abot/mobile_abot/odom" /> 

    <!-- <param name="/use_sim_time" value="false" /> -->
    <!-- <remap from="scan" to= "/abot/scan" /> -->

    <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping" output="screen">
        <rosparam file="$(find abot_navigation)/config/slam_gmapping_params.yaml" command="load" />
    </node>


    <!-- <node pkg="move_base" type="move_base" name="move_base" respawn="false" output="screen">
        <rosparam file="$(find abot_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find abot_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find abot_navigation)/config/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find abot_navigation)/config/global_costmap_params.yaml" command="load"/>
        <rosparam file="$(find abot_navigation)/config/base_local_planner_params.yaml" command="load"/>
        
        <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
        <remap from="odom" to="$(arg odom_topic)"/>

    </node> -->

    <arg name="no_static_map" default="false"/>

    <arg name="base_global_planner" default="navfn/NavfnROS"/>
    <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>

    <node pkg="move_base" type="move_base" name="move_base" respawn="false" output="screen">


        <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
        <remap from="odom" to="$(arg odom_topic)"/>
        
        <param name="base_global_planner" value="$(arg base_global_planner)"/>
        <param name="base_local_planner" value="$(arg base_local_planner)"/> 
        <rosparam file="$(find abot_navigation)/config/planner.yaml" command="load"/>

        <!-- observation sources located in costmap_common.yaml -->
        <rosparam file="$(find abot_navigation)/config/costmap_common.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find abot_navigation)/config/costmap_common.yaml" command="load" ns="local_costmap" />

        <!-- local costmap, needs size -->
        <rosparam file="$(find abot_navigation)/config/costmap_local.yaml" command="load" ns="local_costmap" />
        <param name="local_costmap/width" value="5.0"/>
        <param name="local_costmap/height" value="5.0"/>

        <!-- static global costmap, static map provides size -->
        <rosparam file="$(find abot_navigation)/config/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/>

        <!-- global costmap with laser, for odom_navigation_demo -->
        <rosparam file="$(find abot_navigation)/config/costmap_global_laser.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
        <param name="global_costmap/width" value="10.0" if="$(arg no_static_map)"/>
        <param name="global_costmap/height" value="10.0" if="$(arg no_static_map)"/>
    </node>


</launch>

